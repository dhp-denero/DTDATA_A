						<group>
							<group>
								<field name="name"/>
								<field name="bank_id"/>
								<field name="group_4_partner"/>
							</group>
						</group>
						<notebook>
							<page string="Campos">
								<field name="field_ids">
									<tree string="campos" id="campos" editable="button">
										<field name="name"/>
										<field name="position"/>
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

