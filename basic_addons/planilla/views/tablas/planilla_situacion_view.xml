<odoo>
    <record id="planilla_situacion_view_form" model="ir.ui.view">
        <field name="name">planilla_situacion_view_form</field>
        <field name="model">planilla.situacion</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="codigo" />
                        <field name="descripcion" />
                        <field name="descripcion_abrev" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="planilla_situacion_view_tree" model="ir.ui.view">
        <field name="name">planilla_situacion_view_tree</field>
        <field name="model">planilla.situacion</field>
        <field name="arch" type="xml">
            <tree>
                <field name="codigo" />
                <field name="descripcion" />
                <field name="descripcion_abrev" />
            </tree>
        </field>
    </record>
</odoo>
