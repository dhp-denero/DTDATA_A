<odoo>

    <record id="planilla_worked_days_tree" model="ir.ui.view">
        <field name="name">Parametros tareo</field>
        <field name="model">planilla.worked.days</field>
        <field name="arch" type="xml">
            <tree string="Parametros tareo" create="1" delete="1" edit="1" editable="bottom">
                <field name="codigo" />
                <field name="descripcion" />
                <field name="dias" />
                <field name="horas" />
                <field name="minutos" />
                <field name="tasa_monto" />
            </tree>
        </field>
    </record>
    <record id="planilla_worked_days_form" model="ir.ui.view">
        <field name="name">Parametros tareo</field>
        <field name="model">planilla.worked.days</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="codigo" />
                    <field name="descripcion" />
                    <field name="dias" />
                    <field name="horas" />
                    <field name="minutos" />
                    <field name="tasa_monto" />
                </group>
            </form>
        </field>
    </record>
</odoo>
