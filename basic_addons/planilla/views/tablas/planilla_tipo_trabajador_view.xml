<odoo>
    <record id="planilla_tipo_trabajador_form" model="ir.ui.view">
        <field name="name">planilla_tipo_trabajador_form</field>
        <field name="model">planilla.tipo.trabajador</field>
        <field name="arch" type="xml">
            <form>
                  <sheet>
                    <group>
                        <field name="codigo"  />
                        <field name="descripcion" required="1"/>
                        <field name="descripcion_abrev" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="planilla_tipo_trabajador_tree" model="ir.ui.view">
        <field name="name">planilla_tipo_trabajador_tree</field>
        <field name="model">planilla.tipo.trabajador</field>
        <field name="arch" type="xml">
            <tree>
                <field name="codigo" />
                <field name="descripcion" />
                <field name="descripcion_abrev" />
            </tree>
        </field>
    </record>
</odoo>
