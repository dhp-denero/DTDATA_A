
<odoo>
    <record id="planilla_tablas_tipo_documento_form" model="ir.ui.view">
        <field name="name">planilla_tablas_tipo_documento_form</field>
        <field name="model">planilla.tipo.documento</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="codigo_sunat" required="1"/>
                        <field name="codigo_afp" />
                        <field name="descripcion" required="1"/>
                        <field name="descripcion_abrev" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="planilla_tablas_tipo_documento_tree" model="ir.ui.view">
        <field name="name">planilla_tablas_tipo_documento_tree</field>
        <field name="model">planilla.tipo.documento</field>
        <field name="arch" type="xml">
            <tree>
                <field name="codigo_sunat" />
                <field name="codigo_afp" />
                <field name="descripcion_abrev" />
            </tree>
        </field>
    </record>
</odoo>
