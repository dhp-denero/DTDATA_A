<odoo>
	<record id="resource_calendar_inherit_form" model="ir.ui.view">
        <field name="name">resource_calendar_inherit_form</field>
        <field name="model">resource.calendar</field>
        <field name="inherit_id" ref="resource.resource_calendar_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="average_hours" widget="float_time"/>
            </xpath>
        </field>
    </record>
</odoo>