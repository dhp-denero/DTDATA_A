
<odoo>
    <record id="hr_payslip_run_wizard_form_view" model="ir.ui.view">
        <field name="name">hr_payslip_run_wizard_form_view</field>
        <field name="model">hr.payslip.run.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="tipo"/>
                </group>
                <footer>
                    <button name="do_rebuild" string="Generar" type="object" class="oe_highlight"/>
                        or
                    <button string="Cancelar" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
